<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Wedding Planner</title>
    @model WeddingPlanner.Models.NewWedding
</head>
<body>
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <span class="navbar-brand">Wedding Planner</span>
        <h3>Plan Your Wedding</h3>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class='nav-link' href="/logout">Logout</a>
            </li>
        </ul>
    </nav><br>
    <table>
        <form class="form" asp-action="CreateWedding" asp-controller="Home" method="post">
            <tr>
                <td><label asp-for="Groom">Wedder One:</label></td>
                <td><input asp-for="Groom" type="text" name="Groom"></td>
                <td><span asp-validation-for="Groom"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Bride">Wedder Two:</label></td>
                <td><input asp-for="Bride" type="text" name="Bride"></td>
                <td><span asp-validation-for="Bride"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Date">Date:</label></td>
                <td><input asp-for="Date" type="date" name="Date"></td>
                <td><span asp-validation-for="Date"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Address">Address:</label></td>
                <td><input asp-for="Address" type="text" name="Address"></td>
                <td><span asp-validation-for="Address"></span></td>
            </tr>
            <tr>
                <td><button class="btn btn-success">Create</button></td>
            </tr>
        </form>
    </table>
</body>
</html>